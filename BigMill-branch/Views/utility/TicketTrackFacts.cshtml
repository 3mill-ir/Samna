
@model IEnumerable<BigMill.Models.TicketTrackFactModel>
@using BigMill.Infrastructure;
@if (Model != null)
{
    List<string[]>
        myresult = new List<string[]>();
    int s = 1;
    foreach (var item in Model)
    {
        string[] temp = new string[4];
        temp[0] = item.Name;
        temp[1] = item.Count.ToString();
        temp[2] = @Html.getRandomColor(s * 7);
        s = s + 1;
        temp[3] = "#6C7A89";
        myresult.Add(temp);
    }
    this.ViewContext.HttpContext.Items["TicketTrackFacts"] = myresult;
    <h3 class="col-title" style=" margin-top: 50px;">@Resource.Resource.User_TicketFacts</h3>
    <span class="liner" style="width:91%;"></span>
        if (Model.Count() == 0)
    {
          <div class="notification-box notification-box-error notif-anim center">
                            <p><i class="icon-remove-sign"></i>هنوز درخواستی در سامانه ثبت نشده است.</p>
                        </div>
    }
    <div class="text-center" style=" margin-bottom: 50px;width: 500px;">
        <canvas id="pieChart2" class="full-width" style=" margin-right: -145px;width: 100%;margin-top:20px;"></canvas>
        <div id="pieLegend2" style="width: 300px;margin-top: -190px;margin-right: 270px;height: 290px;"></div>
    </div>
}
else
{
    <div class="notification-box notification-box-error notif-anim center">
                            <p><i class="icon-remove-sign"></i>اطلاعاتی در دسترس نیست !</p>
                            <a class="notification-close" href="#"><i class="icon-remove"></i></a>
                        </div>
}