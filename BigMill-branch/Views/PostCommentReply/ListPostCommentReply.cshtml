@model IEnumerable<BigMill.Models.PostCommentReplyModel>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateOnUTC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfLikes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfDislikes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.F_PostsComments_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Display)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateOnUTC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfLikes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfDislikes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.F_PostsComments_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Display)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditPostCommentReply", new { PostCommentReplyId = item.ID }) |
            @Html.ActionLink("Delete", "DeletePostCommentReply", new { PostCommentReplyId = item.ID })

        </td>
    </tr>
}

</table>
