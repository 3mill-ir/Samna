@model IEnumerable<BigMill.Models.PostCommentModel>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateOnUtc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Display)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfReply)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfLikes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfDislikes)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateOnUtc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Display)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfReply)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfLikes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfDislikes)
        </td>

        <td>
            @Html.ActionLink("CommentReply", "AddPostCommentReply","PostCommentReply", new { id = item.ID }) |
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
