<div class="page-content">
    <div class="row clearfix">
        <div class="grid_8">
            <div style="background-image: url(../../Content/UserContent/z3mill/samna-help.png); height: 101px;">
                <a href="@Url.Action("StaticView", "Static", new { FileName = "TicketTutorial.html" })"><img src="~/Content/UserContent/images/samna-help-button.gif" alt="help" style="float: left;border-radius: 100px;margin-top: 25px;margin-left: 64px; height: 109px; width: 109px;" /></a>
            </div>
        </div>
        <div class="grid_4">
            <div style="background-image: url(../../Content/UserContent/z3mill/samna-in.png); height: 101px;">
