                @Html.Action("LatestNews", "Utility", new { CategoryId = System.Configuration.ConfigurationManager.AppSettings["AkhbarId"] })
            </div>
        </div>
    </div>

    <div class="row clearfix" style="height: 430px; margin-top: 60px; margin-bottom: 30px;">
        <div class="grid_5" style=" height: 430px;float: right;background-color:#eaeaea;padding-right: 40px;">
            @Html.Action("TicketTrackFacts", "Utility")
        </div>
        <div class="grid_5" style="height: 380px;float: left;background-color: #eaeaea;padding-right: 40px;padding-top: 50px;padding-left: 70px;">
            @Html.Action("PollParticipationIndex", "Utility")
        </div>
    </div>

    <div class="row clearfix">
        <div class="grid_12">
            <div class="gap clearfix custom-h10"> </div>
        </div>
    </div>



    <div class="row clearfix">
        <div class="grid_12">
            <div class="gap clearfix custom-h10"></div>
        </div>
    </div>

    <div class="row clearfix" >
        <div class="grid_12" style=" border: 3px solid; margin-bottom: 25px; margin-top: 20px;height: 50px;">
            <div class="gap clearfix custom-h30"></div>
            <div class="breaking-news-bar" style="margin-left:25px;margin-top: -15px;">
                <span class="title blink_me custom-color-icon6" style="margin-right: 30px;">@Resource.Resource.User_MessagesAndInformations</span>
                <ul id="nt_1381119256" class="newst" style="color: black;direction:rtl;">
                    @Html.Action("InformationBar", "Utility")
                </ul>
            </div>
            <div class="gap clearfix custom-h30"></div>
        </div>
    </div>


    <div class="row clearfix">
        <div class="grid_12">
            <div class="clearfix title-center">
                <h2 class="col-title" style=" margin-bottom: 20px;">@Resource.Resource.User_LatestParliament</h2>
            </div>
            <div class="owl-carousel nav_side" id="poc_tt2">
                @Html.Action("LatestParliament", "Utility", new { CategoryId = System.Configuration.ConfigurationManager.AppSettings["ParliamentId"] })
            </div>
        </div>
    </div>

    <div class="row clearfix" style="margin-top: 40px;">
